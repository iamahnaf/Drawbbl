<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="688.0" prefWidth="1043.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameAuth.RegisterController">
    <stylesheets>
        <!-- This line is crucial. It links to our stylesheet. -->
        <URL value="@login_style.css" />
    </stylesheets>
    <children>
        <!-- This VBox is the semi-transparent frame -->
        <VBox alignment="CENTER" layoutX="126.0" layoutY="229.0" maxHeight="400.0" maxWidth="808.0" prefHeight="400.0" prefWidth="808.0" spacing="15.0" styleClass="auth-container" AnchorPane.bottomAnchor="62.0" AnchorPane.leftAnchor="126.0" AnchorPane.rightAnchor="109.0" AnchorPane.topAnchor="229.0">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>
            <children>
                <Label styleClass="title-label" text="Create Account" />
                <Label fx:id="errorLabel" style="-fx-text-fill: red;" textAlignment="CENTER" wrapText="true" />
                <TextField fx:id="usernameField" promptText="Username" styleClass="custom-input" />
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="custom-input" />
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="custom-input" />
                <Button onAction="#handleRegister" prefHeight="40.0" prefWidth="200.0" styleClass="custom-button" text="Register" />
                <Hyperlink onAction="#switchToLogin" styleClass="link-style" text="Already have an account? Login" />
            </children>
        </VBox>
    </children>
</AnchorPane>

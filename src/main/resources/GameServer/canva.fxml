<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<BorderPane prefHeight="771.0" prefWidth="1120.0" styleClass="root-pane" stylesheets="@canva.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameServer.CanvasController">

    <top>
        <VBox>
            <MenuBar styleClass="menu-bar">
                <Menu styleClass="menu-root" text="File">
                    <MenuItem onAction="#onSave" text="Save" />
                    <MenuItem onAction="#onExit" text="Exit" />
                </Menu>
            </MenuBar>

            <ToolBar fx:id="topToolBar" styleClass="main-toolbar">
                <HBox alignment="CENTER" spacing="10" styleClass="toolbar-row">
                    <Label styleClass="label-small" text="Size" />
                    <Slider fx:id="brushSize" prefWidth="150" styleClass="brush-slider" />
                    <ColorPicker fx:id="colorPicker" styleClass="color-picker-custom">
                        <value><Color /></value>
                    </ColorPicker>
                    <CheckBox fx:id="eraser" styleClass="toggle-eraser" text="Eraser" />
                    <Button fx:id="clear" styleClass="action-button" text="Clear" />
                    <Separator orientation="VERTICAL" styleClass="v-separator" />
                    <Label fx:id="displayTimer" styleClass="timer-label" text="Next Round in: 00" />
                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <StackPane prefHeight="634.0" prefWidth="746.0" styleClass="canvas-wrapper">
            <Canvas fx:id="canvas" height="614.0" width="844.0" />
        </StackPane>
    </center>

    <right>
        <VBox prefWidth="250.0" styleClass="side-panel">
            <children>
                <TextArea fx:id="list" editable="false" prefHeight="566.0" prefWidth="232.0" promptText="guesses" styleClass="chat-area" />
                <Separator styleClass="h-separator" />
                <TextField fx:id="message" onAction="#onMessage" promptText="message" styleClass="chat-input" />
            </children>
        </VBox>
    </right>

    <bottom>
        <HBox styleClass="status-bar">
            <children>
                <Label fx:id="wordLabel" styleClass="word-label" text="DRAW THIS: " />
                <Label fx:id="playerDisplay" styleClass="heading-label" text="SERVER WINDOW - Drawing Pane" />
            </children>
        </HBox>
    </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="700.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameClient.LeaderboardController">
    <stylesheets>
        <URL value="@mode_selection.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" spacing="20.0" styleClass="auth-container" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="title-label" text="Global Leaderboard" />
                <!-- THIS IS THE MODIFIED TABLE -->
                <TableView fx:id="leaderboardTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="usernameColumn" prefWidth="250.0" text="Player" />
                        <TableColumn fx:id="totalScoreColumn" prefWidth="250.0" text="Total Score" />
                    </columns>
                </TableView>
                <Button onAction="#handleBackButton" prefHeight="40.0" prefWidth="150.0" styleClass="mode-button" text="Back" />
            </children>
        </VBox>
    </children>
</AnchorPane>